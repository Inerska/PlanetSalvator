@page "/Login"

<div>
    <ValidateForm Model="@_userLoginModel">
        <div class="row g-3">
            <div class="col-12 col-sm-6">
                <BootstrapInput TValue="string" @bind-Value="_userLoginModel.EmailAddress" PlaceHolder="Please type an email address..."/>
            </div>
            <div class="col-12 col-sm-6">
                <BootstrapInput TValue="string" type="password" @bind-Value="_userLoginModel.Password" PlaceHolder="Please type a password..."/>
            </div>
            <div class="col-12">
                <Button ButtonType="@ButtonType.Submit" Text="Submit"/>
            </div>
        </div>
    </ValidateForm>
</div>