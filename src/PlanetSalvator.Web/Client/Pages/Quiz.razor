@page "/quiz"
@using Microsoft.AspNetCore.Authorization


@inject NavigationManager _navigationManager
@inject MessageService _messageService

@attribute [Authorize]

<PageHeader Class="site-page-header" Title="Quiz"
            Subtitle="Testez vos connaissances et remportez des points.">
    <PageHeaderBreadcrumb>
        <Breadcrumb>
            <BreadcrumbItem Href="/">
                <Icon Type="home"/>
            </BreadcrumbItem>
            <BreadcrumbItem Href="@_navigationManager.Uri">
                <Icon Type="tasks"/>
                Quiz
            </BreadcrumbItem>
        </Breadcrumb>
    </PageHeaderBreadcrumb>
</PageHeader>

<div>
    <Steps Current="Current">
        @foreach (var item in _steps)
        {
            <Step Title="@item.Title" Subtitle="@item.Content"/>
        }
    </Steps>

    <div class="steps-content">
        @if (Quizzes.IsNullOrEmpty())
        {
            <p>Loading...</p>
        }
        else
        {
            <QuizUnit Quiz="Quizzes.ElementAt(0)"/>
        }
    </div>
    <div class="steps-action">
        @if (Current > 0)
        {
            <Button Type="primary" OnClick="OnPreClick">Previous</Button>
        }
        @if (Current < _steps.Length - 1)
        {
            <Button Type="primary" OnClick="OnNextClick">Next</Button>
        }
        @if (Current == _steps.Length - 1)
        {
            <Button Type="primary" OnClick=@(() => _messageService.Success("Processing complete!"))>
                Done
            </Button>
        }

    </div>
</div>


<style>
    .steps-content {
        margin-top: 16px;
        border: 1px dashed #e9e9e9;
        border-radius: 6px;
        background-color: #fafafa;
        min-height: 200px;
        text-align: center;
        padding-top: 80px;
    }

    .steps-action {
        margin-top: 24px;
    }
</style>

@code {

    public class StepItem
    {
        public string Title { get; set; }
        public string Content { get; set; }
    }

    private int Current { get; set; }

    private readonly StepItem[] _steps =
    {
        new() {Title = "First", Content = "First-content"},
        new() {Title = "Second", Content = "Second-content"},
        new() {Title = "Third", Content = "Third-content"},
        new() {Title = "Fourth", Content = "Last-content"},
        new() {Title = "Fifth", Content = "Fifth-content"},
    };

    void OnPreClick()
    {
        Current--;
    }

    void OnNextClick()
    {
        Current++;
    }

}