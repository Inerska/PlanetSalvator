@page
@using Microsoft.AspNetCore.Authorization
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<h1>@ViewData["Title"]</h1>
<form id="account" method="post">
    <h2>Vous nous avez manqué !</h2>
    <hr/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Input.Email" placeholder="Adresse email" class="ant-input" autocomplete="username" aria-required="true"/>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-floating">
        <input asp-for="Input.Password" placeholder="Mot de passe" class="ant-input" autocomplete="current-password" aria-required="true"/>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <br/>
    <div>
        <div class="checkbox">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe"/>
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>
    <div>
        <button class="w-100 ant-btn ant-btn-primary" id="login-submit" type="submit">Se connecter</button>
    </div>
    <br/>
    <div>
        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
        </p>
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Créer un compte</a>
        </p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}